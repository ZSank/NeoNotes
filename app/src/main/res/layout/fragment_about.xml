<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".ui.fragment.AboutFrag">

		<!-- TODO: Update blank fragment layout -->


		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="5dp"
			android:elevation="5dp"
			android:layout_margin="10dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/AboutName"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:text="Sanket Zade"
					android:textSize="25sp"
					android:layout_margin="10dp" />

				<TextView
					android:id="@+id/AboutEmail"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:text="zadesank@gmail.com"
					android:textSize="15sp"
					android:layout_margin="10dp" />

				<TextView
					android:id="@+id/AboutGithub"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:text="Github.com/ZSank"
					android:textColor="@color/md_theme_dark_primaryContainer"
					android:textSize="15sp"
					android:layout_margin="10dp" />

				<TextView
					android:id="@+id/AboutLinkedIn"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:text="LinkedIn.in/SanketZade"
					android:textColor="@color/md_theme_dark_primaryContainer"
					android:textSize="15sp"
					android:layout_margin="10dp" />
			</LinearLayout>

		</androidx.cardview.widget.CardView>

	</LinearLayout>
</layout>